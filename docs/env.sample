# Copia questo file in .env.local e compila i valori reali.
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=anon-key
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=anon-key
SUPABASE_SERVICE_ROLE_KEY=service-role-key

NEXT_PUBLIC_BASE_URL=http://localhost:3000

# Feature flag /clubs (allowlist server = fonte di verit√†)
NEXT_PUBLIC_FEATURE_CLUBS_READONLY=1
NEXT_PUBLIC_FEATURE_CLUBS_ADMIN=0
NEXT_PUBLIC_CLUBS_ADMIN_EMAILS=
CLUBS_ADMIN_EMAILS=
ADMIN_EMAILS=
ADMIN_USER_IDS=

# Sentry
SENTRY_DSN=
NEXT_PUBLIC_SENTRY_DSN=
SENTRY_ENVIRONMENT=development
NEXT_PUBLIC_SENTRY_ENVIRONMENT=development
# Imposta la release se vuoi un tag specifico; in Vercel useremo `VERCEL_GIT_COMMIT_SHA` se lasci vuoto
SENTRY_RELEASE=
NEXT_PUBLIC_SENTRY_RELEASE=

# Analytics privacy-first (es. Plausible self-hosted)
NEXT_PUBLIC_ANALYTICS_DOMAIN=
NEXT_PUBLIC_ANALYTICS_SRC=https://plausible.io/js/script.outbound-links.js
NEXT_PUBLIC_ANALYTICS_API=

# Email (Resend)
RESEND_API_KEY=
RESEND_FROM="Club&Player <no-reply@example.com>"
BRAND_REPLY_TO=support@example.com
NOOP_EMAILS=0

# Smoke test / e2e
E2E_HOST=127.0.0.1
E2E_PORT=3010
E2E_BASE_URL=http://127.0.0.1:3010
